{
    "name": "lifecycle",
    "version": "0.0.1",
    "description": "Smart Contract lifecycle",
    "engines": {
        "node": ">=12",
        "npm": ">=6"
    },
    "main": "./build/src/index.js",
    "scripts": {
        "tslint": "tslint --project tsconfig.json -e 'src/old-code/*.ts'",
        "lint": "npm run tslint 'src/**/*.ts' 'test/**/*.test.ts' 'cucumber/**/*.ts'",
        "pretest": "npm run compile && npm run lint",
        "test": "nyc mocha --require ts-node/register --reporter mocha-multi-reporters --reporter-options configFile=mochaConfig.json \"test/**/*.ts\"",
        "compile": "rimraf build && tsc --build tsconfig.json",
        "cucumber": "npm run compile && ./node_modules/.bin/cucumber-js ./cucumber/features/ -p default",
        "debug-test": "npm run compile && mocha --require ts-node/register -u bdd --timeout 999999 './test/**/*.ts'"
    },
    "engineStrict": true,
    "author": "Hyperledger",
    "license": "Apache-2.0",
    "dependencies": {
        "fabric-ca-client": "unstable",
        "fabric-network": "unstable",
        "fabric-common": "unstable",
        "ignore-walk": "^3.0.0",
        "klaw": "^2.0.0",
        "long": "^4.0.0",
        "tar-stream": "1.6.1"
    },
    "devDependencies": {
        "@types/chai": "^4.2.10",
        "@types/chai-as-promised": "^7.1.2",
        "@types/cucumber": "^6.0.1",
        "@types/fs-extra": "^8.1.0",
        "@types/long": "^4.0.1",
        "@types/mocha": "^7.0.2",
        "@types/sinon": "^7.5.2",
        "@types/sinon-chai": "^3.2.3",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "cucumber": "^6.0.5",
        "fs-extra": "^8.1.0",
        "mocha": "^5.2.0",
        "mocha-junit-reporter": "^1.23.3",
        "mocha-multi-reporters": "^1.1.7",
        "nyc": "^15.0.0",
        "rimraf": "^3.0.2",
        "sinon": "^7.1.1",
        "sinon-chai": "^3.3.0",
        "strip-ansi": "^6.0.0",
        "ts-node": "^8.6.2",
        "tslint": "^6.1.0",
        "typescript": "^3.7.2"
    },
    "nyc": {
        "cache": true,
        "extension": [
            ".ts"
        ],
        "exclude": [
            "cucumber",
            "test",
            "build",
            "old-code",
            "coverage",
            "*.js",
            "src/old-code"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "all": true,
        "check-coverage": true,
        "statements": 97.64,
        "branches": 95.12,
        "functions": 93.94,
        "lines": 97.63
    }
}
